{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "noImplicitAny": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "sourceMap": true,
        "removeComments": false,
        "moduleResolution": "node",
        "declaration": true,
        "lib": [
            "es2015",
            "dom"
        ],
        "types": [
            "jasmine"
        ]
    },
    "angularCompilerOptions": {
        "genDir": ".",
        "debug": false,
        "skipMetadataEmit": false
    },
    "include": [
        ".tmp/**/*"
    ]
}
