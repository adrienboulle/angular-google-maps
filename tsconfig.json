{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "noImplicitAny": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "outDir": ".tmp",
        "rootDir": ".",
        "sourceMap": true,
        "removeComments": false,
        "moduleResolution": "node",
        "declaration": true,
        "lib": [
            "es2015",
            "dom"
        ],
        "types": [
            "jasmine"
        ]
    },
    "angularCompilerOptions": {
        "genDir": ".tmp",
        "debug": false,
        "skipMetadataEmit": false
    },
    "include": [
        "src/**/*"
    ]
}
